#!/usr/bin/env python3

import time
import sys
import random

FRAMES = 5 # количество случайного подбора номера
BOLD = "\033[1m" # код жирного шрифта(можно поменять на цвет)
SLEEP_TIME = 0.2 # задержка перед случайным подбором

"""
A,B,C = буквы

1,2,3 = цифры(меняется первой)

000 = регион
"""
NUM_FORMAT = f"   | A123BC | 000 | "

LETTERS = [
        "A", 
        "B", 
        "C", 
        "E", 
        "H", 
        "K", 
        "M", 
        "O", 
        "P", 
        "T", 
        "X",
        ]

NUMBERS = [
        "1",
        "2",
        "3",
        "4",
        "5",
        "6",
        "7",
        "8",
        "9",
        "0",
        ]

# Коды регионов РФ
REGIONS = [
    "01", "02", "102", "702", "03", "04", "05", "06", "07", "08", "09", "10", "11", "12", "13", "113",
    "14", "15", "16", "116", "716", "17", "18", "19", "21", "121", "22", "23", "93", "123", "193",
    "24", "124", "25", "125", "26", "126", "27", "28", "29", "30", "31", "32", "33", "34", "134",
    "35", "36", "136", "37", "38", "138", "39", "40", "41", "42", "142", "43", "44", "45", "46",
    "47", "147", "48", "49", "50", "90", "150", "190", "750", "790", "51", "52", "152", "53", "54",
    "154", "55", "155", "56", "156", "57", "58", "59", "159", "60", "61", "161", "761", "62", "63",
    "163", "763", "64", "164", "65", "66", "96", "196", "67", "68", "69", "70", "71", "72", "73",
    "173", "74", "174", "75", "76", "77", "97", "99", "177", "197", "199", "777", "797", "799", "78",
    "98", "178", "198", "79", "80", "81", "82", "83", "84", "184", "85", "185", "86", "186", "87",
    "89", "92", "95", "94", "188",
]

num = NUM_FORMAT

print(f"{BOLD}   Генерация рандомного номера РФ")
print(f"{BOLD + num}", end="", flush=True)

for i in range(FRAMES):
    new_num = (
            num # мне было лень разбиратся, поэтому захардкодил
            .replace("A", LETTERS[random.randint(1, len(LETTERS)-1)])
            .replace("B", LETTERS[random.randint(1, len(LETTERS)-1)])
            .replace("C", LETTERS[random.randint(1, len(LETTERS)-1)])
            .replace("1", NUMBERS[random.randint(1, len(NUMBERS)-1)])
            .replace("2", NUMBERS[random.randint(1, len(NUMBERS)-1)])
            .replace("3", NUMBERS[random.randint(1, len(NUMBERS)-1)])
            .replace("000", REGIONS[random.randint(1, len(REGIONS)-1)])
            )
    # вывод номера жирным шрифтом
    print(f"\r{BOLD + new_num}", end="", flush=True)
    time.sleep(SLEEP_TIME) # задержка перед следующей сменой

print("")

